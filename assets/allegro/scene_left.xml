<mujoco model="left_allegro_hand scene">
  <include file="left_hand.xml"/>

  <statistic center="0 0 0" extent="0.3"/>

  <visual>
    <rgba haze="0.15 0.25 0.35 1"/>
    <quality shadowsize="8192"/>
    <global azimuth="220" elevation="-40"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="target" rgba="0 1 0 0.1"/>
  </asset>

  <default>
    <default class="target">
        <geom material="target" conaffinity="0" contype="0"/>
    </default>
    <default class="target_cylinder">
        <geom rgba="0 1 0 1"/>
    </default>
  </default>

  <worldbody>
    <light pos="0 0 1"/>
    <light pos="0.3 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" pos="0 0 -0.1" size="0 0 0.05" type="plane" material="groundplane"/>
    <!-- We add a visual element as a mocap with one site as the target (cyllinder)-->
    <site name="anchor" pos="0.04 -0.015 0.22" size="0.002" rgba="1 0 0 1"/>
    <body name="target" pos="0.04 -0.015 0.0">
        <freejoint/>
        <geom class="target_cylinder" name="target cylinder" type="cylinder" size="0.035 0.1" condim="6"/>
        <body name="thumb_target" pos="0.035 0 0.01">
            <geom class="target"  type="sphere" size="0.005"/>
        </body>
        <body name="index_target" pos="0.035 0 0.05">
            <geom class="target"  type="sphere" size="0.005"/>
        </body>
        <body name="middle_target" pos="0.035 0 -0.02">
            <geom class="target"  type="sphere" size="0.005"/>
        </body>
        <body name="ring_target" pos="0.035 0 -0.05">
            <geom class="target"  type="sphere" size="0.005"/>
        </body>
        <site size="0.002" pos="0.0 0.0 0.1" name="hook"/>
    </body>

    <!--<body name="object" pos="0 0 0.1">-->
      <!--<freejoint/>-->
      <!--<geom type="ellipsoid" size="0.03 0.04 0.02" rgba="0.5 0.7 0.5 1" condim="6" priority="1"-->
        <!--friction="0.7 0.002 0.002"/>-->
    <!--</body>-->
  </worldbody>
    <tendon>
        <spatial limited="true" range="0 0.1" width="0.001">
            <site site="hook"/>
            <site site="anchor"/>
        </spatial>
    </tendon>
</mujoco>
